<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boasVindas"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/RScolor"/>

    <EditText
        android:id="@+id/editDistance"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/distancia"
        android:inputType="numberDecimal"
        android:textColor="@color/descriptionColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Distância em Km"
        android:textColor="@color/descriptionColor"/>

    <EditText
        android:id="@+id/editPrice"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/preco"
        android:inputType="numberDecimal"
        android:textColor="@color/descriptionColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Preço por litro"
        android:textColor="@color/descriptionColor"/>

    <EditText
        android:id="@+id/editAutonomy"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/autonomia"
        android:inputType="numberDecimal"
        android:textColor="@color/descriptionColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Km(s) por litro"
        android:textColor="@color/descriptionColor"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/RScolor"
        android:text="SEU GASTO TOTAL SERÁ DE"/>
    
    <TextView
        android:id="@+id/totalPrice"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 0"
        android:textSize="50sp"
        android:textColor="@color/RScolor"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="CALCULAR"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:background="#03BDAC"/>


</LinearLayout>